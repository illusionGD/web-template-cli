{
    "compilerOptions": {
        "target": "es2017",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "sourceMap": false,
        "noEmit": false,
        "noEmitHelpers": false,
        "importHelpers": false,
        "strictNullChecks": false,
        "allowUnreachableCode": true,
        "allowImportingTsExtensions": true,
        "lib": [
            "es6"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "./dist", // 重定向输出目录
        "rootDir": "." // 仅用来控制输出的目录结构
    },
    "exclude": [ // 不参与打包的目录
        "node_modules",
        "dist",
        "**/*.test.ts",
        "temp",
        "scripts",
        "./src/__tests__"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "compileOnSave": false,
    "buildOnSave": false
}